{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./out",
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "moduleResolution": "node",
    },
    "include": [
        "**/*",
        "src/**/*.ts",
        "../../../../**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "bin"
    ],
}
