{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "outDir": "./out",
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@sillytavern/*": ["../../../*"],
        }

    },
    "parserOptions": {
        "sourceType": "module",
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        " ../../../extensions",
        "node_modules",
        "dist",
        "bin"
    ],
}
