{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./out",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": [
        "**/*",
        "src/**/*.ts",
        "../../../../**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "bin"
    ],
}
